#include<string.h>
#include<stdlib.h>
#define ERROR -1;
#define SUCCESS 2;

typedef struct Student student;
typedef struct Student* p;

struct Student
{
	char ime[100];
	char prezime[100];
	int bodovi;
};

int main()
{
	int count = 0;
    char a[50]={0};
	struct Student* s = NULL;
	FILE* fp = NULL;

	fp = fopen("student.txt", "r");

	if (fp == NULL)
	{ 
		printf("Greska!\n");
	return ERROR;
	}

	while (!feof(fp))
	{
		fgets(a, 50, fp);
		if (fgetc(fp) == '\n')
		{
			count++;

		}
		
		count++;

     
	
		
		
		puts(a);
	}
		printf("Broj redaka je: %d\n", count);
    fclose(fp);

	return 0;
}

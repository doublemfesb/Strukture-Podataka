int CitanjeStoga(stog)
{
	int rez;
    FILE*fp=NULL;
    
    char*FileName=NULL;
     FileName=(char*)malloc(BUFFER*sizeof(char));
    if(FileName==NULL){
        printf("Greska pri alokacji");
        return ERROR;
    }
    
    char*str=NULL;
    str=(char*)malloc(BUFFER*sizeof(char));
    if(str==NULL)
    {
        printf("greska pri alokaciji");
        return ERROR;
    }
    
    printf("Unesite datoteku za citanje:\n");
    scanf("%s",FileName);
    if(strchr(FileName,".")==0)
        strcat(FileName,".txt");
    fp=fopen(FileName,"r");
    if(fp==NULL){
        printf("Greska:");
        return NERADI;
    }
    while(!feof(fp))
    {
        fscanf(fp,"%s",str);
        Postfix(str,S);
    }
    rez=pop(S);
    fclose(fp);
    return rez;
}
	
